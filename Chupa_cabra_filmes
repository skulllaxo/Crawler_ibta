import scrapy

from scrapy import shell

class FilmesIbta(scrapy.Spider):
    name = 'filmesibta'
    start_urls = ['https://www.adorocinema.com/vod/filmes/']

    def parse(self,response):
        site = response


        pass
        for link in   response.xpath('//li//div//a/@href').getall():
            yield scrapy.Request(response.urljoin(link),callback=self.parse_filmes)
    def parse_filmes(self,response):
        pass

        title = response.css('h1::text').get().strip()
        diretor = response.css('span.blue-link::text').get()

        yield {'title':title,'diretor':diretor}











